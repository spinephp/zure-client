{
  "server": {
    "port"  : 9294
  },

  "routes": [
    { "/woo/app/orderinfo"        : "./public" },
    { "/woo/app/orderinfo/test"    : "./test/public" },
    { "/woo"                   : { "host": "127.0.0.1", "port": 8080, "hostPath": "/woo", "patchRedirect": true } }
  ],

  "packages": {
    "spine.orderinfo": {
      "libs"    : ["lib/runtime.js"],
      "modules" : [
        "es5-shimify",
        "json2ify",
        "jqueryify",
        "spine",
        "spine/lib/ajax",
        "spine/lib/local",
        "spine/lib/route",
        "spine/lib/manager"
      ],
      "paths"  : ["./app"],
      "target" : "./public/orderinfo.js",
      "jsAfter": "jade.rethrow = function rethrow(err, filename, lineno){ throw err; } "
    },
    "css": {
      "paths"  : "./css",
      "target" : "./public/orderinfo.css"
    },
    "test": {
      "identifier" : "specs",
      "jsAfter"    : "require('lib/setup'); for (var key in specs.modules) specs(key);",
      "paths"      : ["./test/specs"],
      "target"     : "./test/public/specs.js"
    }
  }
}

@import './mixin'
@import './header'

body
	color: #222

h2
	text-align: center
	font-size: 22px

p
	text-align: center
	font-size: 16px


#orderstate 
	float:right
	padding:5px 10px 0 0

#array-two
	overflow: hidden
	width: 100%
	li
		float: left
		margin: 0 .5em 0 1em
	span
		background: #ddd
		padding: .7em 1em
		float: left
		text-decoration: none
		color: #444
		text-shadow: 0 1px 0 rgba(255,255,255,.5);
		position: relative
	span::before,.current::before
		content: ""
		position: absolute
		top: 50%;
		margin-top: -1.5em
		border-width: 1.5em 0 1.5em 1em
		border-style: solid
		border-color: #ddd #ddd #ddd transparent
		left: -1em
	span::after,.current::after
		content: ""
		position: absolute
		top: 50%
		margin-top: -1.5em
		border-top: 1.5em solid transparent
		border-bottom: 1.5em solid transparent
		border-left: 1em solid #ddd
		right: -1em
	.current
		padding: .7em 1em
		float: left
		text-decoration: none
		color: #444
		text-shadow: 0 1px 0 rgba(255,255,255,.5)
		position: relative
		font-weight: bold
		background:  #99db76
	.current::after
		border-left: 1em solid #99db76;
	.current::before
		border-color: #99db76 #99db76 #99db76 transparent;

#mycar
	float:left
	clear:both
	margin:8px 0 0 8px

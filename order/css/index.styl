#my_order
	margin:10px
	clear:both
	table
		width:100%
		border-top:1px solid #000
		border-right:1px solid #ccc
		border-bottom:1px solid #ccc
		border-left:1px solid #ccc
		tr:nth-child(n+2) 
			background:#ffefef
		tr:first-child,tr:last-child
			height:30px
			text-align:center
			background:#eee
		tr:nth-last-child(2) 
			background:#fefefe
		tr:nth-last-child(2) td:first-child 
			text-align:left
			padding-left:8px
		tr:nth-last-child(2) td:nth-child(n+2) 
			text-align:right
			padding-right:8px
		tr td:last-child 
			width:100px
			text-align:center
		tr:last-child td
			height:40px
			text-align:right
			padding-right:8px
		tr td b
			color:red
		tr td p
			text-align:center


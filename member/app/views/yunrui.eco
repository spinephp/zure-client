<% money=(rmb)-> %>
	<%= (new Number(rmb)).toFixed(2) %>
<% end %>

<% star=(evals)-> %>
	<% sum = 0 %>
	<% sum+= eval.star for eval in evals %>
	<% sum /= evals.length %>
	<% for i in [1..5]: %><% m = if i <= sum then 1 else 0 %><img src="images/star<%= m %>.png" /><% end %>
<% end %>


@import './mixin'
@import './header'

body
	color: #222

h2
	text-align: center
	font-size: 22px

p
	text-align: center
	font-size: 16px

.stack
	position: relative

	> *:not(.active)
		display: none

.goodsinfomations
	width: 20%
	margin: 0
	padding: 0
	float: left
	clear:both
.goodinfomation
	width: 95%
	border: 1px solid #ccc
	margin: 8px 0
	h4
		text-align: left
		vbg-gradient(#ddd, #FFF)
		margin: 0
		padding: 8px
	>img
		width: 95%
		cursor:pointer
		margin: 5px
	p
		margin: 8px 0
		text-align: left
		font-size: small
		overflow: hidden
		label
			width:80px
			text-align:right
			display: inline-block
		b
			color:red
		img
			width:16px
			height:16px
			margin: 0
			vertical-align: sub
		input
			width:50px

.goodevals,.goodfeels
	width:80%
	margin: 0
	padding: 0
	float:left
.evals
	width:100%
	margin: 8px 0
	clear:both
	h4
		text-align: left
		vbg-gradient(#ddd, #FFF)
		margin: 0
		padding: 8px
	p
		text-align: left
		clear: both
		margin-left: 10px
		label
			width: 100px
			display: inline-block
			text-align: right
			vertical-align: top
		textarea
			width:50%
			height:100px
.oneeval
	margin: 5px auto
	>ul
		width:12%
		list-style: none
		float:left
		font-size:x-small
		line-height:19px
		text-align:center
		padding:0px
		margin:3px 0
		clear:both
		li
			padding-top:0
			padding-bottom:0
			margin-top:0
			margin-bottom:0
		li:first-child img
			cursor:pointer
		li:last-child img
			vertical-align: sub
	ul+div
		float: left
		width: 87%
		border: 1px solid #eee
.oneeval article
	width:85%
	float:left
	line-height:12px
	border:1px solid #ccc
	background:#f9f9ff
	margin:3px 0px 8px 12px
	padding:0

	p:first-child
		border-bottom:1px solid #ccc
		padding: 0 0 6px 0
		img
			width:16px
			height:16px
			vertical-align: sub
	p
		margin: 8px 5px 0
		padding: 5px 0
		overflow:hidden
		font-size: small
		text-align: left
		text-overflow:ellipsis

		label
			width:65px
			text-align:right
			display:inline-block
			margin-right:3px
		label:last-child
			padding-top:0px
		b
			background:#ddd
			padding:5px
			margin: 0 5px
		span
			float:right;
	p+div
		width: 86%
		border: 1px solid #ddd
		float: right
		margin: 8px 0px 10px
		padding: 8px 20px
		label
			display: block
			margin: 5px
		input[type=text]
			width: 91%
	ul
		width:100%
		list-style: none
		padding: 0
		li
			text-align: left
			font-size:small
			margin: 5px 10px
			border-top: 1px solid #ccc
			padding: 8px
			clear:both
			strong
				color: #bbb
				font-size: large
				float: left
				padding: 8px 5px 0 0

			span
				color:#19c
				cursor:pointer
				display: inline-block
				float: right
			p
				margin:0
			p a
				float:right

.reply
	color:red
	
.singleimages
	clear:both
	width: 100%
	>div
		float:left
	>div:first-child
		width: 80%
		border: 1px solid #eee
		img
			width:98%
			margin:10px
.imagesets
	width: 18%
	button
		width:98%
		margin:0 auto
		
.imgscroll
	height:80%
	ul li img
		width:98%

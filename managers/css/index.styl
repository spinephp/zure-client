@import './mixin'
@import './theme'
@import './orderedit'
@import './zTreeStyle'

.stack
  position: relative
  
  > *:not(.active)
    display: none
    
body, html
  margin: 0;
  padding: 0;
  width: 100%
  height: 100%

body
  vbox()

header#header
  overflow: hidden;
  height: 50px;
  border-box()
  inset-box-shadow(0px, -1px, 3px, #1d1d1d)
  vbg-gradient( #474747, #303030)

  h1,h2
    line-height: 50px;
    float: left;
    padding: 0 20px;
    font-size: 18px;
    margin: 0;
    color: #FFF;
    border-right: 1px solid #181818;
    box-shadow(1px, 0px, 1px, #525252)
    text-shadow: 0 -1px 1px black;
    font-weight: bold;

#article
  box-flex(1)
  vbox()

#article .sysadmins
  box-flex(1)
  hbox()
  
  .sidebar
    width: 120px;
    vbox()
    
    header
      padding: 6px 7px 5px 7px;
      border: 1px solid #c5c5c5;
      border-width: 1px 0 1px 0;
      background: #ffffff;
      vbg-gradient(#ffffff, #dedfe0)

      input
        font-size: 30px;
        width: 100%;    
        
    dl
      box-flex(1)
      overflow-y: scroll
      margin: 0 
      padding: 0
    
    dt
      height: 24px
      font-size: x-small
      font-weight: bold
      margin: 8px 0 4px 8px
      padding: 0 5px
      line-height: 24px

    dd
      height: 24px
      font-size: x-small
      padding: 0
      line-height: 24px
      cursor:pointer
      
      border-bottom: 1px solid #d2d2d1;
      color: #333;
      ellipsis()
      
      &.active
        color: #ffffff;
        text-shadow: 0 -1px 1px #46677f;
        vbg-gradient( #7bb5db, #4775b8)
        border-bottom-color: #609fd0;
        inset-box-shadow(0, 2px, 2px, #4775b8)
        
    footer
      padding: 6px;
      border-top: 1px solid #c5c5c5;
      vbg-gradient(#ffffff, #dedfe0)
      box-shadow(0, -1px, 2px, rgba(0, 0, 0, 0.1))
      text-align: right;
  
  .main
    vbox()
    box-flex(1)
	margin: 5px
    header
      color: #333333;
      font-weight: bold;
      text-shadow: 0 1px 1px #ffffff;
      font-size: 14px;
      border-bottom: 1px solid rgba(0, 0, 0, 0.3);
      vbg-gradient(#ffffff, #e0e0e1)
      box-shadow(1px, 1px, 2px, rgba(0, 0, 0, 0.1))
      overflow: hidden
      
      a
        float: left;
        line-height: 30px;
        height: 30px;
        padding: 0 20px;
        cursor: pointer;
        border-right: 1px solid rgba(0, 0, 0, 0.3);
        text-decoration: none
        
        &:active
          background: #dadada;
          inset-box-shadow(0, 0, 10px, #9c9c9c)

    .content
      box-flex(1)
      inset-box-shadow(1px, 2px, 2px, rgba(0, 0, 0, 0.1))
      padding: 20px;
      -webkit-user-select: text;


.qiyes
  margin:20px 8px 0 0

  input[type="text"],select
    width: 400px
    font-size: small

.rowselected
	color:#fff
	background:#f60

.form_hint 
    background: #d45252
    border-radius: 3px 3px 3px 3px
    color: white
    margin-left:8px
    padding: 1px 6px
    z-index: 999 /* hints stay above all other elements */
    position: absolute /* allows proper formatting if hint is two lines */
    display: none

.form_hint::before
    content: "\25C0" /* left point triangle in escaped unicode */
    color:#d45252
    position: absolute
    top:1px
    left:-6px

